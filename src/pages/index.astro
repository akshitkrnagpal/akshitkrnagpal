---
import Layout from '../layouts/Layout.astro';
import Linkedin from '../components/simple-icons/linkedin.astro'
import Github from '../components/simple-icons/github.astro'
import X from '../components/simple-icons/x.astro'
---

<Layout>
  <main class="min-h-dvh relative overflow-hidden">
    <!-- Subtle texture overlay -->
    <div class="absolute inset-0 opacity-[0.015] pointer-events-none" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%270 0 256 256%27 xmlns=%27http://www.w3.org/2000/svg%27%3E%3Cfilter id=%27noise%27%3E%3CfeTurbulence type=%27fractalNoise%27 baseFrequency=%270.8%27 numOctaves=%274%27 stitchTiles=%27stitch%27/%3E%3C/filter%3E%3Crect width=%27100%25%27 height=%27100%25%27 filter=%27url(%23noise)%27/%3E%3C/svg%3E');"></div>

    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-[40vw] h-[40vw] max-w-[600px] max-h-[600px] rounded-full opacity-[0.03] -translate-y-1/2 translate-x-1/4" style="background: radial-gradient(circle, var(--color-accent) 0%, transparent 70%);"></div>
    <div class="absolute bottom-0 left-0 w-[30vw] h-[30vw] max-w-[400px] max-h-[400px] rounded-full opacity-[0.02] translate-y-1/2 -translate-x-1/4" style="background: radial-gradient(circle, var(--color-ink) 0%, transparent 70%);"></div>

    <!-- Content -->
    <div class="relative z-10 min-h-dvh flex flex-col">
      <!-- Navigation -->
      <nav class="w-full px-6 md:px-12 lg:px-20 py-6 flex justify-between items-center animate-fade-in">
        <span class="text-sm tracking-widest uppercase font-medium" style="color: var(--color-muted);">Portfolio</span>
        <a
          href="/indie"
          class="text-sm tracking-wide font-medium transition-colors duration-300 hover:opacity-70"
          style="color: var(--color-ink);"
        >
          Indie Projects
        </a>
      </nav>

      <!-- Main content -->
      <div class="flex-1 flex items-center justify-center px-6 md:px-12 lg:px-20 py-12">
        <div class="w-full max-w-5xl grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16 items-center">

          <!-- Left: Photo -->
          <div class="lg:col-span-5 flex justify-center lg:justify-end animate-scale-in delay-1">
            <div class="relative">
              <!-- Decorative frame -->
              <div class="absolute -inset-3 border border-[var(--color-ink)]/10 rounded-sm"></div>
              <div class="absolute -inset-6 border border-[var(--color-ink)]/5 rounded-sm"></div>

              <!-- Photo -->
              <div class="relative w-56 h-56 md:w-72 md:h-72 overflow-hidden rounded-sm">
                <img
                  src="https://avatars.githubusercontent.com/u/15872348"
                  alt="Akshit Kr Nagpal"
                  class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700"
                />
                <!-- Overlay on hover -->
                <div class="absolute inset-0 bg-[var(--color-accent)]/0 hover:bg-[var(--color-accent)]/10 transition-colors duration-500"></div>
              </div>

              <!-- Accent corner -->
              <div class="absolute -bottom-2 -right-2 w-8 h-8 bg-[var(--color-accent)]"></div>
            </div>
          </div>

          <!-- Right: Content -->
          <div class="lg:col-span-7 text-center lg:text-left">
            <!-- Eyebrow -->
            <p class="text-xs tracking-[0.3em] uppercase mb-4 animate-fade-up delay-2" style="color: var(--color-muted);">
              Software Engineer
            </p>

            <!-- Name -->
            <h1 class="text-4xl md:text-5xl lg:text-6xl mb-6 leading-[1.1] animate-fade-up delay-3" style="font-family: var(--font-display);">
              Akshit Kr Nagpal
            </h1>

            <!-- Divider -->
            <div class="w-16 h-px bg-[var(--color-ink)]/20 mb-6 mx-auto lg:mx-0 animate-fade-up delay-4"></div>

            <!-- Bio -->
            <p class="text-base md:text-lg leading-relaxed max-w-md mx-auto lg:mx-0 mb-10 animate-fade-up delay-4" style="color: var(--color-muted);">
              Self-taught full-stack engineer with a passion for clean code, open source, and algorithms. Building websites since 14 and always learning.
            </p>

            <!-- Social Links -->
            <div class="flex gap-6 justify-center lg:justify-start animate-fade-up delay-5">
              <a
                href="https://github.com/akshitkrnagpal"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="GitHub"
                class="group relative"
              >
                <span class="absolute -inset-3 bg-[var(--color-ink)]/0 group-hover:bg-[var(--color-ink)]/5 rounded-full transition-colors duration-300"></span>
                <Github class="relative w-6 h-6 transition-transform duration-300 group-hover:-translate-y-0.5" style="color: var(--color-ink);" />
              </a>
              <a
                href="https://linkedin.com/in/akshitkrnagpal"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="LinkedIn"
                class="group relative"
              >
                <span class="absolute -inset-3 bg-[var(--color-ink)]/0 group-hover:bg-[var(--color-ink)]/5 rounded-full transition-colors duration-300"></span>
                <Linkedin class="relative w-6 h-6 transition-transform duration-300 group-hover:-translate-y-0.5" style="color: var(--color-ink);" />
              </a>
              <a
                href="https://x.com/akshit_io"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="X (Twitter)"
                class="group relative"
              >
                <span class="absolute -inset-3 bg-[var(--color-ink)]/0 group-hover:bg-[var(--color-ink)]/5 rounded-full transition-colors duration-300"></span>
                <X class="relative w-6 h-6 transition-transform duration-300 group-hover:-translate-y-0.5" style="color: var(--color-ink);" />
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer accent line -->
      <div class="w-full h-1 bg-[var(--color-accent)] animate-fade-in delay-6"></div>
    </div>
  </main>
</Layout>
